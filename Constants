%{
#include <stdio.h>
%}

%%
[0-9]+                { printf("Constant: %s\n", yytext); }
[0-9]+\.[0-9]+        { printf("Constant: %s\n", yytext); }
"0x"[0-9a-fA-F]+       { printf("Constant: %s\n", yytext); }
"0b"[01]+              { printf("Constant: %s\n", yytext); }
%%

int main() {
    yyin = fopen("sample.c", "r");

    if (yyin == NULL) {
        fprintf(stderr, "Error opening file.\n");
        return 1;
    }

    yylex();
    fclose(yyin);
    return 0;
}
